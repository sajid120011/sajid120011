#include<stdio.h>
#include,string.h>
int main()
{
     char input[100];
     int palindrome=1;
     printf("Enter a string");
     scanf("%S",input);
     int length = strlen(input);
     int i=0;
     int j=length-1;
     while (i<j) {
           if(input[i]!=input[j]){
                                  palindrome=0;
                                  break;
                                  }
                                  i=i+1;
                                  j=j-1;
                                  }                                     
                   if(palindrome) {
                                  printf("the input is palindrome");
                                  }
                                  else {
                                       printf("the input is not a palindrome");
                                       }
     return 0;
}
                                                      
      
