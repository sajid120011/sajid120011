#include<stdio.h>
int main ()
{
    int n,i,j;
    i=1;
    j=1;
    printf("Enter value of n");
    scanf("%d" , &n);
    while (i<=n){
          while (j<=i){
                printf("*");
                j=j+1;
                }
                print("\n");
                i=i+1;
                }
          return 0;
          }      
